@model BookInsertViewModel

@{
    ViewData["Title"] = "Insert " + Model.Category + " Book";
}

<form method="post" class="upsert-form">
    <table>
        <tbody>
            <tr>
                <td>
                    <label asp-for="Book.Code">Code*</label>
                </td>
                <td>
                    <input asp-for="Book.Code" readonly/>
                    <span asp-validation-for="Book.Code"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Book.Title">Title*</label>
                </td>
                <td>
                    <input asp-for="Book.Title" />
                    <span asp-validation-for="Book.Title"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Book.CategoryName">Category Name</label>
                </td>
                <td>
                    <input asp-for="Book.CategoryName"  readonly value="@Model.Category"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Book.AuthorId">Author: </label>
                </td>
                <td>
                    <select asp-for="Book.AuthorId" asp-items="Model.Author">
                        <option value="null">Select Author</option>
                    </select>
                    <span asp-validation-for="Book.AuthorId"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Book.ReleaseDate">Release Date *</label>
                </td>
                <td>
                    <input type="date" asp-for="Book.ReleaseDate" />
                    <span asp-validation-for="Book.ReleaseDate"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Book.TotalPage">Total Page</label>
                </td>
                <td>
                    <input asp-for="Book.TotalPage" />
                    <span asp-validation-for="Book.TotalPage"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Book.Summary">Summary</label>
                </td>
                <td>
                    <textarea asp-for="Book.Summary"></textarea>
                    <span asp-validation-for="Book.Summary"></span>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button">Submit</button>
    <a class="blue-button" asp-action="Index">Back to Index</a>
</form>
