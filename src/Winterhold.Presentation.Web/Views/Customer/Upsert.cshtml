@model CustomerViewModel

@{
    if (Model == null)
    {
        ViewData["Title"] = "Insert Customer";
    }
    else
    {
        ViewData["Title"] = "Update Customer";
    }
}

<form method="post" class="upsert-form">
    <table>
        <tbody>
            <tr>
                <td>
                    <label asp-for="MembershipNumber">Membership Number *</label>
                </td>
                <td>
                    <input asp-for="MembershipNumber" />
                    <span asp-validation-for="MembershipNumber"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="FirstName">First Name*</label>
                </td>
                <td>
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="LastName">Last Name</label>
                </td>
                <td>
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="BirthDate">Birth Date *</label>
                </td>
                <td>
                    <input type="date" asp-for="BirthDate" />
                    <span asp-validation-for="BirthDate"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Gender">Gender *</label>
                </td>
                <td>
                    <input type="radio" value="Male" asp-for="Gender"/>  <label>Male</label>
                    <input type="radio" value="Female" asp-for="Gender" /> <label>Female</label>
                    <span asp-validation-for="Gender"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Phone">Phone</label>
                </td>
                <td>
                    <input asp-for="Phone" />
                    <span asp-validation-for="Phone"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Address">Address</label>
                </td>
                <td>
                    <textarea asp-for="Address"></textarea>
                    <span asp-validation-for="Address"></span>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button">Submit</button>
    <a class="blue-button" asp-action="Index">Back to Index</a>
</form>


